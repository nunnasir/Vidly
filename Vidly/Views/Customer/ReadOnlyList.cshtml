@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>
<hr />

<table id="customers" class="table table-bordered table-hover">
    <thead><tr>
        <th>Customer Name</th>
        <th>Membership Type</th>
        <th>Action</th>
    </tr></thead>
    
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>

        $(document).ready(function () {

            var table = $('#customers').DataTable({
               
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "membershipType.name"
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<span><a href = '/customer/Details/" + data + "'class='btn btn-info'>Details</a></span>";
                        }
                    }
                ]
               
            });
        });

    </script>
}